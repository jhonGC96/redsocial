<div class="card-header bg-dark text-white">
    <h5 class="text-white">
        <i class="fas fa-comments text-white"></i> Latest Comments
    </h5>
</div>
<div class="card-body">
    {{#each sidebar.comments}}
    <div class="row">
        <div class="col">
            <a href="/images/{{image.uniqueId}}">
                <img src="" class="img-thumbnail w-70">
            </a>
        </div>
        <div class="col">
            <blockquote class="w-100">
                <p>{{comment}}</p>
                <footer class="blockquote-footer">
                    <span>{{name}}</span>
                    <span>{{timeago timestamp}}</span>
                </footer>
            </blockquote>
        </div>
    </div>
    {{/each}}
</div>