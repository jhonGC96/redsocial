<div class="card bg-dark text-white">

    <div class="card-header">
        <i class="far fa-image"></i> Subir una foto de perfil
    </div>

    <div class="card-body">
        <form id="subirImagen" method="POST" enctype="multipart/form-data">

            <div class="form-group">
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" name="image" class="custom-file-input" id="imagen"
                            aria-describedby="inputGroupFileAddon" required />
                        <label class="custom-file-label" for="inputGroupFile">Elegir archivo</label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="text" id="id_descripcion" name="descripcion" class="form-control bg-dark text-white border border-success"
                    placeholder="Agregue descripcion" required>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-upload"></i> Subir imagen
                </button>
            </div>
        </form>
    </div>
</div>