<div class="table-responsive">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-xs-6">
                    <h2>Valora tus tecnologias</h2>
                </div>
                <div class="col-xs-6">
                    <a href="#addEmployeeModal" class="btn btn-primary" data-toggle="modal"><i
                            class="far fa-plus-square"></i> <span>Agregar tecnologia</span></a>
                </div>
            </div>
        </div>
        <table id='tablaTecnologia' class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Tecnologia</th>
                    <th>Antes de Tecla</th>
                    <th>Despues de Tecla</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <td>
                        <button type="submit" class="btn btn-success" data-toggle="modal">
                            <i class="far fa-arrow-alt-circle-right"></i> Enviar datos </button>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
</div>
<!-- Edit Modal HTML -->
<div id="addEmployeeModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h4 class="modal-title">Agrega tecnologias</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Tecnologia</label>
                        <select class="form-control" id="id_tecnologia" name="id_tecnologia">
                            <option value="1" name="Node Js">Node Js</option>
                            <option value="2" name="Frontend">Frontend</option>
                            <option value="3" name="Swagger">Swagger</option>
                            <option value="4" name="Javascript">Javascript</option>
                            <option value="5" name="JWT">JWT</option>
                            <option value="6" name="MVC">MVC</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Conocimiento del 1 al 10 antes de Tecla</label>
                        <input id="beforetecla" type="number" min="1" max="10" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Conocimiento del 1 al 10 despues de Tecla</label>
                        <input id="afteretecla" type="number" min="1" max="10" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Puntaje tecla 1-5</label>
                        <input type="number" min="1" max="5" class="form-control" disabled>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                    <button id="bt_add" type="submit" class="btn btn-default">Agregar</button>
                </div>
            </form>
        </div>
    </div>
</div>